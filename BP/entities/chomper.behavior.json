{
	"format_version": "1.21.110",
	"minecraft:entity": {
		"description": {
			"identifier": "exinfo:chomper",
			"is_spawnable": true,
			"is_summonable": true,
			"is_experimental": false
		},
		"component_groups": {
			"mode_switcher": {
				"minecraft:target_nearby_sensor": {
					"inside_range": 2.0,
					"outside_range": 3.0,
					"must_see": true,
					"on_inside_range": {
						"event": "switch_to_melee",
						"target": "self"
					},
					"on_outside_range": {
						"event": "switch_to_ranged",
						"target": "self"
					}
				}
			},
			"ranged_mode": {
				"minecraft:shooter": {
					"def": "minecraft:small_fireball",
					"sound": "small_fireball",
					"projectiles": [
						{
							"def": "minecraft:small_fireball"
						}
					]
				},
				"minecraft:behavior.ranged_attack": {
					"priority": 2,
					"burst_shots": 3,
					"burst_interval": 0.3,
					"charge_charged_trigger": 0.0,
					"charge_shoot_trigger": 5.0,
					"attack_interval_min": 3.0,
					"attack_interval_max": 5.0,
					"attack_radius": 12.0
				}
			},
			"melee_mode": {
				"minecraft:attack": {
					"damage": 3
				},
				"minecraft:behavior.melee_box_attack": {
					"priority": 3
				}
			}
		},
		"components": {
			"minecraft:type_family": {
				"family": [
					"monster",
					"chomper",
					"mob"
				]
			},
			"minecraft:experience_reward": {
				"on_death": "query.last_hit_by_player ? 5 + (query.equipment_count * Math.Random(1,3)) : 0"
			},
			"minecraft:physics": {
				"has_gravity": true,
				"has_collision": true
			},
			"minecraft:pushable": {
				"is_pushable": false
			},
			"minecraft:nameable": {},
			"minecraft:leashable": {
			},
			"minecraft:push_through": {
				"value": 1
			},
			"minecraft:health": {
				"value": 20,
				"max": 20
			},
			"minecraft:movement": {
				"min": 0.15,
				"max": 0.15
			},
			"minecraft:loot": {
				"table": "loot_tables/entities/chomper.json"
			},
			"minecraft:movement.basic": {},
			"minecraft:jump.static": {},
			"minecraft:navigation.generic": {
				"avoid_water": false,
				"avoid_damage_blocks": true,
				"can_open_doors": false,
				"can_swim": true
			},
			"minecraft:behavior.random_stroll": {
				"priority": 4,
				"speed_multiplier": 1.0
			},
			"minecraft:behavior.random_look_around": {
				"priority": 5
			},
			"minecraft:despawn": {
				"despawn_from_distance": {}
			},
			"minecraft:scale": {
				"value": 2.0
			},
			"minecraft:conditional_bandwidth_optimization": {},
			"minecraft:floats_in_liquid": {},
			"minecraft:behavior.swim_idle": {
				"idle_time": 5,
				"success_rate": 0.5
			},
			"minecraft:collision_box": {
				"height": 1,
				"width": 1
			},
			"minecraft:breathable": {
				"total_supply": 15,
				"suffocate_time": 0,
				"breathes_air": true,
				"breathes_water": true
			},
			"minecraft:behavior.stomp_turtle_egg": {
				"priority": 4,
				"speed_multiplier": 1,
				"search_range": 10,
				"search_height": 2,
				"goal_radius": 1.14,
				"interval": 20
			},
			"minecraft:behavior.hurt_by_target": {
				"priority": 1
			},
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 2,
				"must_see": true,
				"must_see_forget_duration": 5,
				"entity_types": [
					{
						"filters": {
							"test": "is_family",
							"subject": "other",
							"value": "player"
						},
						"max_dist": 32
					}
				]
			},
			"minecraft:on_hurt": {
				"event": "minecraft:on_hurt_event",
				"target": "self"
			},
			"minecraft:on_hurt_by_player": {
				"event": "minecraft:on_hurt_event",
				"target": "self"
			}
		},
		"events": {
			"minecraft:entity_spawned": {
				"randomize": [
					{
						"add": {
							"component_groups": [
								"mode_switcher"
							]
						}
					}
				]
			},
			"switch_to_melee": {
				"remove": {
					"component_groups": [
						"ranged_mode"
					]
				},
				"add": {
					"component_groups": [
						"melee_mode"
					]
				}
			},
			"switch_to_ranged": {
				"remove": {
					"component_groups": [
						"melee_mode"
					]
				},
				"add": {
					"component_groups": [
						"ranged_mode"
					]
				}
			},
			"minecraft:on_hurt_event": {
				"add": {
					"component_groups": [
						"mode_switcher"
					]
				}
			}
		}
	}
}