{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.chomper": {
      "initial_state": "idle",
      "states": {
        "idle": {
          "animations": ["idle"],
          "transitions": [
            { "run": "q.ground_speed > 1.0" }
          ],
          "blend_transition": 0.2
        },
        "run": {
          "animations": ["run"],
          "transitions": [
            { "idle": "q.ground_speed < 0.5" }
          ],
          "blend_transition": 0.2
        }
      }
    }
  }
}